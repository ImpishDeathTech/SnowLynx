-- executable should be done last
local tab = snow.Tab({
    mode    = snow.exe,
    object  = 'test.out',
    include = './include',
    lib     = './lib',
    src     = 'test.cxx',
    link    = {
        'testlib'
    }
},
-- make sure to do them in order
snow.Tab({
    mode    = snow.build,
    submode = snow.pic,
    include = 'include',
    src     = 'src/testlib.cxx',
}),
snow.Tab({
    mode    = snow.build,
    submode = snow.shared,
    include = 'include',
    object  = 'testlib',
    obj     = 'testlib.o'
}))

return tab
